[include]
	path = ~/.gitconfig.local
[core]
	excludesFile = ~/.gitignore
[alias]
	af = !git add $(fzf)
	st = status -sb
	co = checkout
	cb = checkout -b
	cm = commit
	cma = commit --amend
	cmm = commit --amend --no-edit
	d = diff
	ds = diff --staged
	lol = log --oneline --graph --all
[init]
	defaultBranch = main
[status]
	showUntrackedFiles = all
[push]
	autoSetupRemote = true
[fetch]
	prune = true
	pruneTags = true
	all = true
[branch]
	sort = -committerdate
[tag]
	sort = version:refname
[diff]
	algorithm = histogram
	colorMoved = plain
	mnemonicPrefix = true
	renames = true
[commit]
	verbose = true
[rebase]
	autoSquash = true
	autoStash = true
[pull]
	rebase = true
	autoSquash = true
	autoStash = true
[merge]
	autoStash = true
	tool = nvim
[mergetool]
	prompt = false
	keepBackup = false
[mergetool "nvim"]
	cmd = "nvim -d \"$LOCAL\" \"$BASE\" \"$REMOTE\" \"$MERGED\""
	trustExitCode = true
[advice]
	addEmptyPathspec = false
